<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="application.controllers.NhanVienController">

    <top>
        <VBox spacing="10">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10" />
            </padding>
            <HBox spacing="10">
                <TextField fx:id="txtTen" promptText="Tên nhân viên" />
                <ComboBox fx:id="cboChucVu" promptText="Chức vụ" />
                <TextField fx:id="txtEmail" promptText="Email" />
                <TextField fx:id="txtUsername" promptText="Username" />
                <PasswordField fx:id="txtPassword" promptText="Password" />
                <Button fx:id="btnThem" text="Thêm" onAction="#add" />
                <Button fx:id="btnSua" text="Sửa" onAction="#update" />
                <Button fx:id="btnXoa" text="Xóa" onAction="#delete" />
            </HBox>
            <HBox spacing="10" style="-fx-border-color: #e0e0e0; -fx-border-width: 1 0 0 0; -fx-padding: 10 0 0 0;">
                <padding>
                    <Insets left="0" />
                </padding>
                <Label text="Lọc theo:" style="-fx-font-weight: bold;" />
                <ComboBox fx:id="cboLocChucVu" promptText="-- Chức vụ --" prefWidth="150" />
                <Button text="Lọc" onAction="#filter" />
                <Button text="Xóa lọc" onAction="#clearFilter" />
                <Region HBox.hgrow="ALWAYS" />
            </HBox>
        </VBox>
    </top>

    <center>
        <TableView fx:id="tblNV" onMouseClicked="#onTableClick">
            <columns>
                <TableColumn fx:id="colMa" text="Mã" prefWidth="70" />
                <TableColumn fx:id="colTen" text="Tên" prefWidth="160" />
                <TableColumn fx:id="colChucVu" text="Chức vụ" prefWidth="120" />
                <TableColumn fx:id="colEmail" text="Email" prefWidth="200" />
                <TableColumn fx:id="colUsername" text="Username" prefWidth="120" />
                <TableColumn fx:id="colPassword" text="Password" prefWidth="120" visible="false" />
            </columns>
        </TableView>
    </center>

    <bottom>
        <HBox spacing="10" alignment="CENTER_RIGHT">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10" />
            </padding>
            <TextField fx:id="txtTim" promptText="Tìm kiếm..." HBox.hgrow="ALWAYS" />
            <Button text="Tìm" onAction="#search" prefWidth="80" />
            <Button text="Xóa tìm kiếm" onAction="#clearSearch" prefWidth="100" />
        </HBox>
    </bottom>

</BorderPane>