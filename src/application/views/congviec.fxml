<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="application.controllers.CongViecController">

    <top>
        <HBox spacing="10">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10" />
            </padding>
            <ComboBox fx:id="cboDuAn" promptText="Chọn dự án" />
            <ComboBox fx:id="cboNhanVien" promptText="Chọn nhân viên" />
            <TextField fx:id="txtTenCV" promptText="Tên công việc" />
            <DatePicker fx:id="dpBD" promptText="Ngày bắt đầu" />
            <DatePicker fx:id="dpKT" promptText="Ngày kết thúc" />
            <ComboBox fx:id="cboTrangThai" promptText="Trạng thái" />
            <Slider fx:id="sliderTienDo" min="0" max="100" prefWidth="140" />
            <Button text="Thêm" onAction="#add" />
            <Button text="Sửa" onAction="#update" />
            <Button text="Xóa" onAction="#delete" />
        </HBox>
    </top>

    <center>
        <TableView fx:id="tableCV">
            <columns>
                <TableColumn fx:id="colMa" text="Mã công việc" prefWidth="80" />
                <TableColumn fx:id="colDuAn" text="Tên dự án" prefWidth="120" />
                <TableColumn fx:id="colNhanVien" text="Tên nhân viên" prefWidth="120" />
                <TableColumn fx:id="colTen" text="Tên công việc" prefWidth="140" />
                <TableColumn fx:id="colBD" text="Ngày bắt đầu" prefWidth="110" />
                <TableColumn fx:id="colKT" text="Ngày kết thúc" prefWidth="110" />
                <TableColumn fx:id="colTrangThai" text="Trạng thái" prefWidth="90" />
                <TableColumn fx:id="colTienDo" text="Tiến độ (%)" prefWidth="80" />
            </columns>
        </TableView>
    </center>

    <bottom>
        <VBox spacing="10">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10" />
            </padding>
            <HBox spacing="10" alignment="CENTER_LEFT">
                <Label text="Tìm kiếm:" />
                <TextField fx:id="txtSearchName" promptText="Tên công việc..." prefWidth="150" />
                <ComboBox fx:id="cboSearchNhanVien" promptText="Nhân viên..." prefWidth="130" />
                <ComboBox fx:id="cboSearchTrangThai" promptText="Trạng thái..." prefWidth="120" />
                <Button text="Tìm" onAction="#search" />
                <Button text="Xóa lọc" onAction="#clearSearch" />
            </HBox>
        </VBox>
    </bottom>

</BorderPane>
