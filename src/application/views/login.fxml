<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefWidth="400" prefHeight="260" xmlns:fx="http://javafx.com/fxml"
            fx:controller="application.controllers.LoginController">

    <VBox spacing="15" alignment="CENTER" layoutX="50" layoutY="30" prefWidth="300">
        <Label text="ĐĂNG NHẬP" style="-fx-font-size: 20px; -fx-font-weight: bold;" />

        <ComboBox fx:id="cboUserType" promptText="Chọn loại user" prefWidth="200" />
        <TextField fx:id="txtUsername" promptText="Tên đăng nhập" text="admin" />
        <PasswordField fx:id="txtPassword" promptText="Mật khẩu" text="admin123" />

        <Button text="Đăng nhập" prefWidth="200" onAction="#handleLogin" />
    </VBox>

</AnchorPane>