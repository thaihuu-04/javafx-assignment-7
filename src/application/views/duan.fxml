<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="application.controllers.DuAnController">

    <top>
        <VBox spacing="10">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10" />
            </padding>
            <HBox spacing="10">
                <TextField fx:id="txtTenDA" promptText="Tên dự án" />
                <DatePicker fx:id="dpBD" promptText="Ngày bắt đầu" />
                <DatePicker fx:id="dpKT" promptText="Ngày kết thúc" />
                <ComboBox fx:id="cboTrangThai" promptText="Trạng thái" />
                <ComboBox fx:id="cboQuanLy" promptText="Người quản lý" />
                <Button text="Thêm" onAction="#add" />
                <Button text="Sửa" onAction="#update" />
                <Button text="Xóa" onAction="#delete" />
            </HBox>
            <HBox spacing="10" style="-fx-border-color: #e0e0e0; -fx-border-width: 1 0 0 0; -fx-padding: 10 0 0 0;">
                <padding>
                    <Insets left="0" />
                </padding>
                <Label text="Lọc theo:" style="-fx-font-weight: bold;" />
                <ComboBox fx:id="cboLocTrangThai" promptText="-- Trạng thái --" prefWidth="150" />
                <ComboBox fx:id="cboLocQuanLy" promptText="-- Người quản lý --" prefWidth="150" />
                <Button text="Lọc" onAction="#filter" />
                <Button text="Xóa lọc" onAction="#clearFilter" />
                <Region HBox.hgrow="ALWAYS" />
            </HBox>
        </VBox>
    </top>

    <center>
        <TableView fx:id="tableDuAn">
            <columns>
                <TableColumn fx:id="colMa" text="Mã DA" prefWidth="80" />
                <TableColumn fx:id="colTen" text="Tên DA" prefWidth="160" />
                <TableColumn fx:id="colBD" text="Ngày bắt đầu" prefWidth="120" />
                <TableColumn fx:id="colKT" text="Ngày kết thúc" prefWidth="120" />
                <TableColumn fx:id="colTT" text="Trạng thái" prefWidth="140" />
                <TableColumn fx:id="colQL" text="Người quản lý" prefWidth="140" />
            </columns>
        </TableView>
    </center>

    <bottom>
        <HBox spacing="10" alignment="CENTER" style="-fx-border-color: #cccccc; -fx-border-width: 1 0 0 0;">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10" />
            </padding>
            <Label text="Tìm kiếm:" />
            <TextField fx:id="txtTim" promptText="Nhập tên dự án..." HBox.hgrow="ALWAYS" />
            <Button text="Tìm" onAction="#search" prefWidth="80" />
            <Button text="Xóa" onAction="#clearSearch" prefWidth="80" />
        </HBox>
    </bottom>

</BorderPane>
